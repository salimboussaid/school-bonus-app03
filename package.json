{
  "name": "school-bonus-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build && npm run copy-files",
    "copy-files": "node -e \"require('fs').copyFileSync('public/_redirects', 'out/_redirects'); require('fs').copyFileSync('public/_headers', 'out/_headers');\"",
    "start": "serve -s out -l $PORT",
    "lint": "next lint",
    "proxy": "node server.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run proxy\""
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@tabler/icons-react": "^3.36.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "framer-motion": "^12.34.2",
    "http-proxy-middleware": "^2.0.9",
    "lucide-react": "^0.574.0",
    "next": "^15.1.6",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "serve": "^14.2.5",
    "tailwind-merge": "^3.4.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.22",
    "concurrently": "^8.2.2",
    "eslint": "^8",
    "eslint-config-next": "^15.1.6",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
